# {{ istota_namespace | capitalize }} secrets - managed by Ansible
# Loaded via EnvironmentFile= in systemd service
{% set env_prefix = istota_package | upper %}
{% if istota_nextcloud_app_password %}
{{ env_prefix }}_NC_APP_PASSWORD={{ istota_nextcloud_app_password }}
{% endif %}
{% if istota_email_imap_password %}
{{ env_prefix }}_IMAP_PASSWORD={{ istota_email_imap_password }}
{% endif %}
{% if istota_email_smtp_password | default(istota_email_imap_password) %}
{{ env_prefix }}_SMTP_PASSWORD={{ istota_email_smtp_password | default(istota_email_imap_password) }}
{% endif %}
{% if istota_developer_gitlab_token %}
{{ env_prefix }}_GITLAB_TOKEN={{ istota_developer_gitlab_token }}
{% endif %}
{% if istota_developer_github_token %}
{{ env_prefix }}_GITHUB_TOKEN={{ istota_developer_github_token }}
{% endif %}
{% if istota_ntfy_token %}
{{ env_prefix }}_NTFY_TOKEN={{ istota_ntfy_token }}
{% endif %}
{% if istota_ntfy_password %}
{{ env_prefix }}_NTFY_PASSWORD={{ istota_ntfy_password }}
{% endif %}
